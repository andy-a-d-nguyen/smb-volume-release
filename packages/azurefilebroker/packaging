set -e

source /var/vcap/packages/golang-1-linux/bosh/compile.env

mkdir ../src && cp -a * ../src/ && mv ../src ./src
mkdir $BOSH_INSTALL_TARGET/bin

go build -o $BOSH_INSTALL_TARGET/bin/azurefilebroker src/code.cloudfoundry.org/azurefilebroker/*.go

cp ./src/code.cloudfoundry.org/azurefilebroker/Procfile ${BOSH_INSTALL_TARGET}

