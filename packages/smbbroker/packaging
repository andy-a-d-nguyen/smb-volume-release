set -e

source /var/vcap/packages/golang-1-linux/bosh/compile.env

mkdir ../src && cp -a * ../src/ && mv ../src ./src
mkdir $BOSH_INSTALL_TARGET/bin

go build -o $BOSH_INSTALL_TARGET/bin/smbbroker src/code.cloudfoundry.org/smbbroker/*.go

cp ./src/code.cloudfoundry.org/smbbroker/Procfile ${BOSH_INSTALL_TARGET}

