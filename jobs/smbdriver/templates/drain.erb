#!/bin/bash

set -e

RUN_DIR=/var/vcap/sys/run/smbdriver
PIDFILE=$RUN_DIR/smbdriver.pid
LOG_DIR=/var/vcap/sys/log/smbdriver
LOGFILE=$LOG_DIR/drain.log
ADMIN_PORT=<%=p("adminPort")%>

mkdir -p $LOG_DIR

exec 3>&1

exec 1>> $LOGFILE
exec 2>> $LOGFILE

evacuate() {
  curl --fail --max-time 600 http://127.0.0.1:$ADMIN_PORT/evacuate >/dev/null 2>&1
}

heartbeat() {
  curl --fail --silent http://127.0.0.1:$ADMIN_PORT/ping >/dev/null 2>&1
}

output_for_bosh() {
  exit_code=$?

  if [ $exit_code -eq 0 ]; then
    echo "$(date): smbdriver exited"
  else
    echo "$(date): evacuation failed"
  fi

  echo $exit_code >&3
}

trap output_for_bosh EXIT

if [ ! -f $PIDFILE ]; then
  echo "$(date): PIDFILE does not exist"
  exit 0
fi

pid=$(cat $PIDFILE)

if [ ! -e /proc/$pid ]; then
  echo "$(date): smbdriver process not running"
  exit 0
fi

# wait for rep
for i in {1..90}; do
    if pgrep -x "rep" > /dev/null; then
        echo "$(date): waiting for rep..."
        sleep 10
    else
        break
    fi
done

echo "$(date): rep is done..evacuating smbdriver"

set +e
evacuate
evacuate_exit_code=$?
set -e


if [ $evacuate_exit_code -eq 0 ]; then
  for i in {1..60}; do
    if heartbeat; then
      echo "$(date): waiting"
      sleep 5
    else
      break
    fi
  done

  kill -9 $pid || true
  rm -rf $PIDFILE || true
elif [ $evacuate_exit_code -eq 28 ]; then
   echo "$(date): Drain timed out"
   kill -9 $pid || true
   rm -rf $PIDFILE || true
else
  exit 0
fi

